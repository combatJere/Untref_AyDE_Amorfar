<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <!-- customize the color palette -->
        <item name="colorPrimary">#0097a7</item>
        <item name="colorPrimaryDark">#fbc02d</item>
        <item name="colorAccent">#009688</item>
    </style>

    <style name="CrearMenuActionBar"
        parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/crearMenu_Header</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
    </style>

    <style name="ElegirMenuActionBar"
        parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/elegirMenu_Header</item>
    </style>

    <style name="InformeActionBar"
        parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/informe_Header</item>
        <item name="android:actionBarTabStyle">@style/TabOnActionBar</item>
        <item name="actionBarTabStyle">@style/TabOnActionBar</item>
    </style>

    <style name="InformeActivityTabsStyle"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="boton_grande" >
        <item name="android:layout_width" >@dimen/ancho_standard</item>
        <item name="android:layout_height" >@dimen/alto_boton_standard</item>
    </style>



    <style name="MyActionBar"
        parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/crearMenu_Header</item>
        <item name="background">@color/crearMenu_Header</item>

        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/blanco_puro</item>
    </style>



    <style name="TabOnActionBar"
        parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@color/crearMenu_Header</item>
        <item name="background">@color/crearMenu_Header</item>

        <!--<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>-->
        <!--<item name="titleTextStyle">@style/MyActionBarTitleText</item>-->
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.altosoftuntref.amorfar" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_sobre_amorfar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CrearMenuActivity"
            android:label="@string/crear_menu"
            android:theme="@style/CrearMenuActionBar"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".CrearUsuarioActivity"
            android:label="@string/title_activity_crear_usuario" >
        </activity>
        <activity
            android:name=".SeleccionPlatoActivity"
            android:label="@string/title_activity_seleccion_plato" >
        </activity>
        <activity
            android:name=".SeleccionMultiplesPlatos"
            android:label="@string/title_activity_seleccion_multiples_platos" >
        </activity>
        <activity
            android:name=".ElejirMenuActivity"
            android:label="@string/elegir_menu"
            android:theme="@style/ElegirMenuActionBar" >
        </activity>
        <activity
            android:name=".InformeActivityTabs"
            android:label="@string/title_activity_informe_activity_tabs"
            android:theme="@style/InformeActivityTabsStyle"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
